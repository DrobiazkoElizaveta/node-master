      .container.marketing .col-lg-4 , h2 , p{
    text-align: center; /* Центрируем текст внутри элементов с классом "col-lg-4" */
    font-family: Playfair Display, serif;font-optical-sizing: auto;
font-weight: 400;
color: white;
}

