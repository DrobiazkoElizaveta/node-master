    <title><%= title%></title>
  </head>
  <body>
    <header data-bs-theme="dark"><%- include('./partials/header'); %></header>

    <main class="form-login w-100 m-auto">
      <form action="#" method="post" name="user">
        <h1 class="h3 mb-3 fw-normal">Регистрация</h1>

        <div class="form-floating">
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Имя"
            class="form-control"
            required
          />
          <label for="floatingInput">Имя</label>
        </div>
        <br />
        <div class="form-floating">
          <input
            type="age"
            name="age"
            id="age"
            class="form-control"
            placeholder="Возвраст"
            required
          />
          <label for="floatingInput">Возраст</label>
        </div>
        <br />
        <div class="form-floating">
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            class="form-control"
            required
          />
          <label for="floatingInput">Почта</label>
        </div>
        <br />
        <div class="form-floating">
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Пароль"
            required
          />
          <label for="floatingPassword">Пароль</label>
          <br />
        </div>
        <br />
      </div>
      <div class="row g-2 g-">
        <div class="col-12 col-sm-6">
          <div class="form-check">
            <label class="form-check-label" for="isAdmin">
              Вы админ?
            </label>
            <input class="form-check-input" type="checkbox" value="1" id="isAdmin" name="isAdmin">
          </div>
          
        </div>
      </div>
        <button class="btn btn-primary w-100 py-2" type="submit">
          Регистрация
        </button>
      </form>
    </main>

